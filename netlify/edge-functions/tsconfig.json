{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "outDir": "../../dist/edge-functions",
    "rootDir": "..",
    "allowJs": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
} 